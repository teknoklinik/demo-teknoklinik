<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_account_servis_extension" model="ir.ui.view">
        <field name="name">res.config.settings.account.servis.extension</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='account']" position="inside">
                <block title="Servis Yönetimi Faturalama" name="servis_takip_faturalama_block">
                    <setting id="fatura_parki_policy_setting" string="Ürün Parkı Kayıt Politikası" help="Fatura oluştururken Seri No ile takip edilen ürünler için ürün parkı kaydı politikasını belirleyin.">
                        <field name="fatura_urun_parki_kayit_politikasi" class="o_light_label" widget="radio"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
