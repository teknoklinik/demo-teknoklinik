<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_servis_takip" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.servis.takip</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Servis Yönetimi" data-string="Servis Yönetimi" name="servis_takip">

                    <field name="is_advanced_service_features" invisible="1"/>

                    <h2>Servis Yönetimi Operasyonları</h2>
                    <div class="row mt16 o_settings_container" name="servis_takip_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="servis_policy_setting">
                            <div class="o_setting_right_pane">
                                <label for="urun_parki_kayit_politikasi"/>
                                <div class="text-muted">
                                    Yeni cihazlar için kayıt politikasını belirleyin.
                                </div>
                                <div class="content-group mt16">
                                    <field name="urun_parki_kayit_politikasi" widget="radio"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="servis_duration_setting">
                            <div class="o_setting_right_pane">
                                <label for="servis_sure_asimi_limiti">Süre Aşımı Sınırı</label>
                                <div class="text-muted">
                                    Bu günden daha fazla süredir serviste olan cihazlar için uyarı gösterilir.
                                </div>
                                <div class="content-group mt16">
                                    <field name="servis_sure_asimi_limiti" class="oe_inline" style="width: 100px"/>
                                    <span class="ml8">gün</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Faturalama Ayarları</h2>
                    <div class="row mt16 o_settings_container" name="fatura_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="fatura_parki_policy_setting">
                            <div class="o_setting_right_pane">
                                <label for="fatura_urun_parki_kayit_politikasi"/>
                                <div class="text-muted">
                                    Fatura oluştururken Seri No ile takip edilen ürünler için ürün parkı kaydı politikasını belirleyin.
                                </div>
                                <div class="content-group mt16">
                                    <field name="fatura_urun_parki_kayit_politikasi" widget="radio"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </app>
            </xpath>
        </field>
    </record>

    <record id="action_servis_config_settings" model="ir.actions.act_window">
        <field name="name">Ayarlar</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'module' : 'servis_takip'}</field>
    </record>
</odoo>