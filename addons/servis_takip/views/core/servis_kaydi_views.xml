<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_servis_kaydi_kanban" model="ir.ui.view">
        <field name="name">servis.kaydi.kanban</field>
        <field name="model">servis.kaydi</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_full" default_group_by="state" group_create="false" quick_create="false">
                <field name="state"/>
                <field name="color"/>
                <field name="name"/>
                <field name="musteri_id"/>
                <field name="urun_modeli_id"/>
                <field name="serviste_gecen_sure"/>
                <templates>
                    <div t-name="card">
                        <div t-attf-class="oe_kanban_global_click_edit oe_semantic_html_override oe_kanban_card #{record.color.value ? 'oe_kanban_color_' + record.color.value : ''}">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <span>
                                            <t t-esc="record.name.value"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_tools">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Settings"/>
                                    </a>
                                    <ul class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable">
                                            <li role="presentation">
                                                <a role="menuitem" type="edit">Kaydı Düzenle</a>
                                            </li>
                                        </t>
                                    </ul>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <strong>Müşteri:</strong>
                                        <field name="musteri_id"/>
                                        <br/>
                                        <strong>Ürün:</strong>
                                        <field name="urun_modeli_id"/>
                                        <br/>
                                        <strong>Servis Günü:</strong>
                                        <field name="serviste_gecen_sure"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="o_kanban_record_body">
                                    <field name="state" widget="label_selection" readonly="1" options="{'clickable': false}"/>
                                </div>
                                <div class="o_kanban_record_bottom_right">
                                    <div class="pull-right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_servis_kaydi_form" model="ir.ui.view">
        <field name="name">servis.kaydi.form</field>
        <field name="model">servis.kaydi</field>
        <field name="arch" type="xml">
            <form string="Servis Kaydı">
                <header>
                    <button name="action_toggle_form_edit" string="Kaydı Düzenle" type="object" class="oe_highlight" invisible="state not in ['teslim_edildi', 'iptal'] or formu_duzenle == True"/>
                    <button name="action_toggle_form_edit" string="Düzenlemeyi Tamamla" type="object" class="oe_highlight" invisible="state not in ['teslim_edildi', 'iptal'] or formu_duzenle == False"/>
                </header>
                <sheet>
                    <!-- Hidden Fields -->
                    <field name="formu_duzenle" invisible="1"/>
                    <field name="kayit_etiketi_renk" invisible="1"/>
                    <field name="kayit_etiketi_icon" invisible="1"/>
                    <field name="color" invisible="1"/>
                    <field name="tablo_duzenle" invisible="1"/>
                    <field name="sure_asimi_var" invisible="1"/>
                    <field name="show_urun_parkina_aktar_button" invisible="1"/>

                    <!-- System Fields (mail.thread, activity.mixin) - Hidden -->
                    <field name="create_date" invisible="1"/>
                    <field name="write_date" invisible="1"/>
                    <field name="create_uid" invisible="1"/>
                    <field name="write_uid" invisible="1"/>

                    <div class="row m-0 mb-2 shadow-sm" invisible="state not in ['iptal', 'teslim_edildi']" style="border-radius: 10px; background: linear-gradient(135deg, #8a0f11 0%, #5e0a0b 100%); color: white !important; display: flex; align-items: center; justify-content: space-between; padding: 8px 20px; min-height: 50px;">
                        <div style="flex-grow: 1;">
                            <h3 class="m-0" style="font-weight: 200; font-size: 3rem; letter-spacing: 0.5px; color: white !important;">
                                <field name="kayit_etiketi" readonly="1" nolabel="1"/>
                            </h3>
                        </div>
                        <div style="text-align: right;">
                            <div style="background: rgba(255, 255, 255, 0.12); padding: 2px 15px; border-radius: 30px; display: inline-block; border: 1px solid rgba(255, 255, 255, 0.2);">
                                <field name="state" readonly="1" class="text-uppercase" style="font-size: 1.4rem; font-weight: 300; letter-spacing: 1px; color: white !important;"/>
                            </div>
                        </div>
                    </div>

                    <div class="row m-0 mb-2 shadow-sm" invisible="state in ['iptal', 'teslim_edildi']" style="border-radius: 10px; background: linear-gradient(135deg, #1a5235 0%, #0d2e1e 100%); color: white !important; display: flex; align-items: center; justify-content: space-between; padding: 8px 20px; min-height: 50px;">
                        <div style="flex-grow: 1;">
                            <h3 class="m-0" style="font-weight: 200; font-size: 3rem; letter-spacing: 0.5px; color: white !important;">
                                <field name="kayit_etiketi" readonly="1" nolabel="1"/>
                            </h3>
                        </div>
                        <div style="text-align: right;">
                            <div style="background: rgba(255, 255, 255, 0.12); padding: 2px 15px; border-radius: 30px; display: inline-block; border: 1px solid rgba(255, 255, 255, 0.2);">
                                <field name="state" readonly="1" class="text-uppercase" style="font-size: 1.4rem; font-weight: 300; letter-spacing: 1px; color: white !important;"/>
                            </div>
                        </div>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <div class="alert alert-danger shadow-sm" role="alert" invisible="sure_asimi_var == False" style="border: 2px solid #ff0000; border-radius: 12px; padding: 15px 25px; background: linear-gradient(135deg, #fff5f5 0%, #feb2b2 100%); color: #9b2c2c; margin-bottom: 20px;">
                        <div style="display: flex; align-items: center;">
                            <i class="fa fa-clock-o mr-3" style="font-size: 2.5rem; color: #9b2c2c !important;"/>
                            <div>
                                <h4 class="m-0" style="font-weight: 800; letter-spacing: 0.5px; color: #9b2c2c !important;">KRİTİK SÜRE AŞIMI!</h4>
                                <p class="m-0" style="font-size: 1.1rem; color: #9b2c2c !important;">
                                    Cihaz <strong>
                                    <field name="serviste_gecen_sure" readonly="1" nolabel="1"/>
                                </strong> süredir serviste. <field name="sure_asimi_mesaji" readonly="1" nolabel="1"/>
                            </p>
                        </div>
                    </div>
                </div>

                <button name="action_urun_aktar_wizard" string="ÜRÜN PARKINDAN AKTAR" type="object" icon="fa-arrow-circle-down" class="btn-primary py-3 px-4 shadow-sm font-weight-bold mb-3" style="background: linear-gradient(135deg, #004d99 0%, #007bff 100%); border: none; border-radius: 8px; text-transform: uppercase; letter-spacing: 1px;" invisible="state not in ['kayit_yapildi']" context="{'skip_required_check': True}"/>

                <group>
                    <group string="Müşteri Bilgileri">
                        <field name="musteri_tipi" readonly="formu_duzenle == False and state in ['teslim_edildi', 'iptal']" style="border-bottom: 1px solid #ddd;"/>
                        <field name="musteri_id" readonly="formu_duzenle == False and state in ['teslim_edildi', 'iptal']" context="{'default_is_company': musteri_tipi == 'sirket'}" style="border-bottom: 1px solid #ddd;"/>
                    </group>
                    <group string="Servis Süresi">
                        <field name="kayit_tarihi" string="Ürün Giriş Tarihi" readonly="1" style="border-bottom: 1px solid #ddd;"/>
                        <field name="teslim_tarihi" string="Servis Çıkış Tarihi" invisible="state not in ['teslim_edildi', 'iptal']" style="border-bottom: 1px solid #ddd;"/>
                        <field name="serviste_gecen_sure" string="Serviste Geçen Gün" readonly="1" style="border-bottom: 1px solid #ddd;"/>
                    </group>
                    <group string="Ürün Bilgileri">
                        <field name="urun_turu_id" readonly="formu_duzenle == False and state in ['teslim_edildi', 'iptal']" style="border-bottom: 1px solid #ddd;"/>
                        <field name="urun_marka_id" domain="[('tur_id', '=', urun_turu_id)]" readonly="urun_turu_id == False or (formu_duzenle == False and state in ['teslim_edildi', 'iptal'])" style="border-bottom: 1px solid #ddd;"/>
                        <field name="urun_modeli_id" domain="[('marka_id', '=', urun_marka_id)]" readonly="urun_marka_id == False or (formu_duzenle == False and state in ['teslim_edildi', 'iptal'])" style="border-bottom: 1px solid #ddd;"/>
                        <field name="seri_no" readonly="formu_duzenle == False and state in ['teslim_edildi', 'iptal']" style="border-bottom: 1px solid #ddd;"/>
                        <field name="barkod_no" readonly="formu_duzenle == False and state in ['teslim_edildi', 'iptal']" style="border-bottom: 1px solid #ddd;"/>
                        <div invisible="not show_urun_parkina_aktar_button" style="display: flex; align-items: center; gap: 8px; margin-top: 5px;">
                            <button name="action_urun_parkina_aktar" type="object" style="all: unset; cursor: pointer; display: inline-flex; align-items: center; gap: 6px; background-color: #E0F7FA; color: #0891B2; padding: 5px 12px; border: 1px solid #B2EBF2; border-radius: 6px; font-size: 11px; font-weight: 600; transition: all 0.2s ease;">
                                <i class="fa fa-plus-circle" style="font-size: 13px; color: #06B6D4;"/>
                                <span style="white-space: nowrap;">Ürün Parkına Aktar</span>
                            </button>
                        </div>
                    </group>
                    <group string="Garanti">
                        <group>
                            <field name="garanti_baslama" style="min-width: 100px !important; border-bottom: 1px solid #ddd;" readonly="formu_duzenle == False and state in ['teslim_edildi', 'iptal']"/>
                            <field name="garanti_suresi" style="border-bottom: 1px solid #ddd;" readonly="formu_duzenle == False and state in ['teslim_edildi', 'iptal']"/>
                        </group>
                        <group>
                            <field name="garanti_bitis" readonly="1" force_save="1" style="border-bottom: 1px solid #ddd;"/>
                            <field name="garanti_durumu" invisible="1"/>
                            <div colspan="2" class="mt-2 mb-2" invisible="garanti_durumu == 'belirsiz'">
                                <div invisible="garanti_durumu != 'yok'" class="alert alert-danger shadow-sm d-flex align-items-center justify-content-center" style="font-size: 1.1em; font-weight: 700; border: 1.5px solid #dc3545; border-radius: 8px; padding: 8px; color: #721c24; background-color: #f8d7da; max-width: 350px; margin: 0 auto;">
                                    <i class="fa fa-exclamation-triangle mr-2" style="font-size: 1.2em;"/>
                                    <span>GARANTİSİ YOK</span>
                                </div>
                                <div invisible="garanti_durumu != 'devam'" class="alert alert-success shadow-sm d-flex align-items-center justify-content-center" style="font-size: 1.1em; font-weight: 700; border: 1.5px solid #28a745; border-radius: 8px; padding: 8px; color: #155724; background-color: #d4edda; max-width: 350px; margin: 0 auto;">
                                    <i class="fa fa-check-circle mr-2" style="font-size: 1.2em;"/>
                                    <span>GARANTİSİ DEVAM EDİYOR</span>
                                </div>
                            </div>
                        </group>
                        <group string="Etiket" colspan="2">
                            <field name="etiket_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Etiketler..." readonly="formu_duzenle == False and state in ['teslim_edildi', 'iptal']"/>
                        </group>
                        <!-- Ödeme Kutusu -->
                        <div class="mt-2 mb-2" colspan="2" invisible="genel_toplam == 0" style="display: flex; align-items: stretch; width: fit-content;">
                            <div style="background: #f0f4ff; border-left: 3px solid #667eea; padding: 6px 15px; border-radius: 6px 0 0 6px; display: flex; flex-direction: column; justify-content: center; min-width: 120px;">
                                <div style="font-size: 10px; color: #667eea; font-weight: 600; text-transform: uppercase; margin-bottom: -2px;">Ödeme</div>
                                <div style="font-size: 18px; font-weight: bold; color: #667eea; white-space: nowrap;">
                                    <field name="genel_toplam" nolabel="1" widget="monetary" options="{'currency_field': 'company_currency_id'}" style="display: inline;"/>
                                    <field name="currency_symbol" nolabel="1" readonly="1" style="font-size: 14px; display: inline; margin-left: 2px;"/>
                                </div>
                            </div>

                            <button name="action_buton_fatura" type="object" class="btn-warning" style="margin: 0 !important; border-radius: 0 6px 6px 0 !important; padding: 0 20px !important; display: flex; align-items: center; gap: 8px; border: none; font-weight: bold; font-size: 14px; height: auto;">
                                <i class="fa fa-file-text-o"/>
                                <span>FATURA</span>
                            </button>
                        </div>
                    </group>
                </group>

                <notebook>
                    <page string="Durum Geçmişi" name="durum_gecmisi">
                        <div invisible="id != False" class="alert alert-warning" role="alert">
                            <p>
                                <strong>Zorunlu alanları doldurmalısınız:</strong>
                            </p>
                            <ul>
                                <li invisible="musteri_id">Müşteri</li>
                                <li invisible="urun_turu_id">Ürün Türü</li>
                                <li invisible="urun_marka_id">Ürün Markası</li>
                                <li invisible="urun_modeli_id">Ürün Modeli</li>
                                <li invisible="seri_no">Seri No</li>
                                <li invisible="ariza_detay_ids">En Az Bir Arıza Tipi</li>
                            </ul>
                        </div>
                        <div invisible="id != False or not musteri_id or not urun_turu_id or not urun_marka_id or not urun_modeli_id or not seri_no or not ariza_detay_ids" class="alert alert-info" role="alert">
                            <p>
                                <strong>Tüm zorunlu alanlar dolduruldu. Devam etmek için aşağıdaki butona tıklayınız.</strong>
                            </p>
                            <button name="action_baslat" type="object" class="btn btn-primary btn-sm">
                                Servis Kaydını Başlat
                            </button>
                        </div>
                        <field name="durum_satirlari" widget="one2many" mode="list" context="{'default_servis_kaydi_id': id, 'form_view_ref': 'servis_takip.view_servis_durum_satiri_popup_form'}" readonly="state in ['teslim_edildi', 'iptal']" invisible="id == False">
                            <list default_order="tarih asc" create="1" delete="0">
                                <field name="state" readonly="state != 'kayit_yapildi'" options="{'no_create': True, 'no_open': True}"/>
                                <field name="tarih" readonly="1"/>
                                <field name="bitis_tarihi" readonly="1"/>
                                <field name="gecen_sure" readonly="1"/>
                                <field name="aciklama"/>
                                <field name="personel_id" readonly="1" widget="many2one_avatar_user"/>
                            </list>
                        </field>
                    </page>

                    <page string="Arıza Detayları">
                        <separator string="Müşteri Şikayetleri ve Notları"/>
                        <field name="ariza_detay_ids" readonly="formu_duzenle == False and state in ['teslim_edildi', 'iptal']">
                            <list string="Arıza Detayları" editable="bottom">
                                <field name="ariza_tanimi_id" string="Arıza Tipi" options="{'no_create': False, 'no_create_edit': False}"/>
                                <field name="musteri_notu" string="Müşteri Notu"/>
                            </list>
                        </field>
                    </page>

                    <page string="Yapılan İşlemler" name="yapilan_islemler">
                        <field name="servis_islem_satirlari" widget="one2many" mode="list" nolabel="1" force_save="1" context="{'default_servis_kaydi_id': id, 'form_view_ref': 'servis_takip.view_servis_islem_satiri_popup_form'}" options="{'reload_on_button': True}">
                            <list default_order="tarih asc" create="1" delete="1">
                                <field name="islem_tipi_id" options="{'no_create': True}" readonly="1"/>
                                <field name="tarih" readonly="1" force_save="1"/>
                                <field name="bitis_tarihi" readonly="1" force_save="1"/>
                                <field name="gecen_sure" readonly="1" force_save="1"/>
                                <field name="aciklama" readonly="1"/>
                                <field name="personel_id" options="{'no_create': True, 'no_open': True}" readonly="1" widget="many2one_avatar_user"/>
                            </list>
                        </field>
                    </page>

                    <page string="Parça ve Hizmetler" name="teknik_rapor">
                        <div class="o_row mb-3 mt-2" style="display: flex; gap: 10px;">
                            <button name="action_buton_teklif" string="TEKLİF OLUŞTUR / GÜNCELLE" type="object" class="btn-info" icon="fa-shopping-cart"/>
                            <button name="action_buton_fatura" type="object" class="btn-warning" style="padding: 10px 15px;">
                                <i class="fa fa-file-text-o mr-2"/>
                                <span>FATURA OLUŞTUR / GÜNCELLE</span>
                            </button>
                        </div>
                        <field name="teknik_rapor_satirlari" widget="section_and_note_one2many" mode="list" nolabel="1" readonly="formu_duzenle == False and state in ['teslim_edildi', 'iptal']">
                            <list editable="bottom" default_order="sequence">
                                <field name="sequence" widget="handle"/>
                                <field name="ornek_tur" string="Tür"/>
                                <field name="ornek_urun_id" string="Ürün" options="{'no_create': True}"/>
                                <field name="ornek_aciklama" string="Açıklama"/>
                                <field name="ornek_miktar" string="Miktar"/>
                                <field name="ornek_birim_fiyat" string="Birim Fi."/>
                                <field name="ornek_vergiler" string="Vergiler" widget="many2many_tags" optional="show"/>
                                <field name="ornek_ara_toplam" string="Ara Toplam" sum="Ara Toplam" readonly="1"/>
                                <field name="currency_id" invisible="1"/>
                            </list>
                        </field>
                        <group name="antet_toplamlar" col="6" class="mt-2">
                            <group colspan="4"/>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="servis_total">
                                <field name="vergi_haric_tutar" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                                <field name="toplam_vergi" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="genel_toplam" style="font-weight: bold; font-size: 1.2em;"/>
                                </div>
                                <field name="genel_toplam" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'company_currency_id'}" style="font-weight: bold; font-size: 1.2em; color: #2c3e50;"/>
                            </group>
                        </group>
                    </page>

                    <page string="Teknisyen Notu" name="teknisyen_notu">
                        <field name="teknisyen_notu" placeholder="Teknisyen tarafından yapılan işlemler ve notlar..."/>
                    </page>

                    <page string="Dokümanlar" name="page_dokumanlar">
                        <field name="dokuman_yukle_ids" context="{'default_servis_kaydi_id': id, 'form_view_ref': 'servis_takip.view_servis_kaydi_dokuman_popup_form'}" options="{'no_create_edit': True, 'no_open': True}" readonly="formu_duzenle == False and state in ['teslim_edildi', 'iptal']">
                            <list string="Dokümanlar" create="true" edit="false" delete="true">
                                <field name="konu" readonly="1"/>
                                <field name="dokuman_dosya_isim" string="Dosya Adı" readonly="1"/>
                                <field name="dokuman_dosya" widget="binary" filename="dokuman_dosya_isim" invisible="1"/>
                                <field name="dokuman_tarihi" string="Tarih" readonly="1"/>
                                <field name="dokuman_personel_id" string="Yükleyen" widget="many2one_avatar_user" readonly="1"/>
                                <button name="action_preview_document" string="Önizle" type="object" icon="fa-eye" class="btn-link" title="Dokümanı Görüntüle"/>
                            </list>
                        </field>
                    </page>

                    <page string="Aksesuarlar" name="aksesuarlar">
                        <field name="aksesuar_ids" readonly="formu_duzenle == False and state in ['teslim_edildi', 'iptal']" nolabel="1">
                            <list string="Aksesuarlar" editable="bottom" class="o_list_compact">
                                <field name="aksesuar_id" options="{'no_create_edit': False, 'no_create': False}" required="1" width="70%"/>
                                <field name="miktar" width="30%"/>
                            </list>
                        </field>
                    </page>

                    <page string="Değer Okuma" name="deger_okuma">
                        <field name="deger_okuma_ids" readonly="formu_duzenle == False and state in ['teslim_edildi', 'iptal']" nolabel="1">
                            <list string="Değer Okuma" editable="bottom" class="o_list_compact">
                                <field name="deger_okuma_tanimi_id" string="Değer Okuma" options="{'no_create_edit': False, 'no_create': False}" required="1" width="30%"/>
                                <field name="aciklama" string="Açıklama" width="50%"/>
                                <field name="tarih" readonly="1" width="10%"/>
                                <field name="personel_id" readonly="1" widget="many2one_avatar_user" width="10%"/>
                            </list>
                        </field>
                    </page>

                    <page string="Raporlama" name="ozel_notebook_1" invisible="ozel_notebook_1_gozuksun == False">
                        <div style="margin-bottom: 30px; padding-bottom: 15px; border-bottom: 2px solid #e0e0e0;">
                            <h2 style="margin: 0; color: #2c3e50; font-weight: 600;">
                                <field name="ozel_notebook_1_label" readonly="1" nolabel="1" class="oe_inline"/>
                            </h2>
                        </div>
                        <field name="ozel_notebook_1_satiri_ids" nolabel="1" context="{'default_notebook_type': 'notebook_1'}" mode="list"/>
                    </page>

                    <page string="Notlar" name="notlar">
                        <field name="notlar_ids" context="{'default_servis_kaydi_id': id, 'form_view_ref': 'modul_teknik_servis.view_servis_kaydi_notlar_popup_form'}" options="{'no_create_edit': True}" readonly="formu_duzenle == False and state in ['teslim_edildi', 'iptal']">
                            <list string="Notlar">
                                <field name="konu"/>
                                <field name="aciklama" string="Açıklama Özeti"/>
                                <field name="not_kayit_tarihi" string="Tarih"/>
                                <field name="not_personel_id" string="İlgili Personel" widget="many2one_avatar_user"/>
                            </list>
                        </field>
                    </page>

                </notebook>

                <div style="margin-top: 30px; margin-left: 50%; padding-left: 30px;">
                    <h5 style="color: #2C3E50; font-weight: 600; margin-bottom: 20px; font-size: 14px;">RAPOR İŞLEMLERİ</h5>
                    <div style="display: flex; gap: 20px; align-items: flex-start;">
                        <div style="display: flex; flex-direction: column; align-items: center; width: 180px;">
                            <button name="action_kabul_raporu_pdf" type="object" class="btn-info" style="width: 100% !important; height: 100px !important; font-weight: bold; border-radius: 5px; margin-bottom: 5px;">
                                <i class="fa fa-file-pdf-o" style="font-size: 24px; display: block; margin-bottom: 5px;"/>
                                <span>Kabul Raporu</span>
                            </button>
                            <button name="action_imza_al_kabul" type="object" class="btn-warning" style="width: 100% !important; height: 50px !important; font-weight: bold; border-radius: 5px;">
                                <i class="fa fa-pencil-square-o mr-2"/>
                                <span>İmza Al</span>
                            </button>
                            <div style="border-right: 1px solid #ddd; width: 100%; height: 10px; margin-top: 10px;"/>
                        </div>

                        <div style="display: flex; flex-direction: column; align-items: center; width: 180px;" invisible="state not in ['teslim_edildi', 'islem_tamamlandi']">
                            <button name="action_teslim_raporu_pdf" type="object" class="btn-success" style="width: 100% !important; height: 100px !important; font-weight: bold; border-radius: 5px; margin-bottom: 5px;">
                                <i class="fa fa-file-pdf-o" style="font-size: 24px; display: block; margin-bottom: 5px;"/>
                                <span>Teslim Raporu</span>
                            </button>
                            <button name="action_imza_al_teslim" type="object" class="btn-warning" style="width: 100% !important; height: 50px !important; font-weight: bold; border-radius: 5px;">
                                <i class="fa fa-pencil-square-o mr-2"/>
                                <span>İmza Al</span>
                            </button>

                            <div style="display: flex; gap: 5px; align-items: center; justify-content: center; margin-top: 15px; width: 100%;">
                                <field name="rapor_parca_hizmet_ekle" widget="boolean"/>
                                <span style="font-size: 11px; color: #666;">Parça ve Hizmetleri Rapora Ekle</span>
                            </div>
                        </div>

                        <div style="display: flex; flex-direction: column; align-items: center; width: 180px;">
                            <button name="action_open_rapor_gonder_wizard" type="object" class="btn-primary" style="width: 100% !important; height: 100px !important; font-weight: bold; border-radius: 5px;">
                                <i class="fa fa-paper-plane" style="font-size: 24px; display: block; margin-bottom: 5px;"/>
                                <span>Rapor Gönder</span>
                            </button>
                            <div style="font-size: 11px; color: #666; margin-top: 15px; text-align: center;">E-Posta &amp; WhatsApp</div>
                        </div>

                    </div>
                </div>

            </sheet>
            <div class="oe_chatter" invisible="1">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
    </field>
